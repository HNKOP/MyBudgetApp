<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@xml/border"
    android:elevation="2dp"
    android:translationZ="2dp"
    android:translationY="1dp"

    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/budget_count_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="7dp"
            android:textSize="18sp"
            android:textColor="#00ff00"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/budget_item_name"
            android:text="name_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:textSize="18sp"
            android:textColor="#404040"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/budget_type_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="budget_type"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="#aaaaaa"
            />
        <TextView
            android:id="@+id/budget_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


    </RelativeLayout>

</LinearLayout>